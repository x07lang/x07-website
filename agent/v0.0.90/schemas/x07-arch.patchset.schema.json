{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://x07.io/spec/x07-arch.patchset.schema.json",
  "title": "x07.arch.patchset@0.1.0",
  "description": "Patchset emitted by `x07 arch check --emit-patch`, targeting multiple JSON files via RFC 6902 JSON Patch ops.",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "patches"],
  "properties": {
    "schema_version": { "const": "x07.arch.patchset@0.1.0" },
    "patches": { "type": "array", "items": { "$ref": "#/$defs/patch_target" } }
  },
  "$defs": {
    "patch_target": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path", "patch"],
      "properties": {
        "path": { "type": "string", "minLength": 1, "maxLength": 1024 },
        "patch": { "$ref": "x07diag.schema.json#/$defs/json_patch" },
        "note": { "type": "string", "maxLength": 1024 }
      }
    }
  }
}

