{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://x07.io/spec/x07-arch.msg.index.schema.json",
  "title": "x07.arch.msg.index@0.1.0",
  "description": "Pinned messaging topic catalog + RR policy id (contracts-as-data).",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "topics", "rr_policy_id"],
  "properties": {
    "schema_version": { "const": "x07.arch.msg.index@0.1.0" },
    "topics": { "type": "array", "minItems": 1, "items": { "$ref": "#/$defs/topic" } },
    "rr_policy_id": { "type": "string", "minLength": 1, "maxLength": 128 }
  },
  "$defs": {
    "topic": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "key_brand", "value_brand", "max_value_bytes"],
      "properties": {
        "id": { "type": "string", "minLength": 1, "maxLength": 256 },
        "key_brand": { "type": "string", "maxLength": 256, "default": "std.bytes.raw_v1" },
        "value_brand": { "type": "string", "minLength": 1, "maxLength": 256 },
        "max_value_bytes": { "type": "integer", "minimum": 1, "maximum": 1073741824 }
      }
    }
  }
}
