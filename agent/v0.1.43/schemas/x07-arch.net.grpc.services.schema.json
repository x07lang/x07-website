{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://x07.io/spec/x07-arch.net.grpc.services.schema.json",
  "title": "x07.arch.net.grpc.services@0.1.0",
  "description": "Pinned gRPC service catalog: proto files + canonical method paths + message brands.",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "id", "v", "protos", "methods"],
  "properties": {
    "schema_version": { "const": "x07.arch.net.grpc.services@0.1.0" },
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9._-]*$"
    },
    "v": { "type": "integer", "minimum": 1 },
    "protos": { "type": "array", "minItems": 1, "items": { "$ref": "#/$defs/proto" } },
    "methods": { "type": "array", "minItems": 1, "items": { "$ref": "#/$defs/method" } }
  },
  "$defs": {
    "rel_path": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "pattern": "^(?![\\\\/])(?![A-Za-z]:)(?!.*(?:^|[\\\\/])\\.\\.(?:[\\\\/]|$)).+"
    },
    "proto": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path"],
      "properties": { "path": { "$ref": "#/$defs/rel_path" } }
    },
    "method": {
      "type": "object",
      "additionalProperties": false,
      "required": ["service", "method", "path", "req_brand", "resp_brand"],
      "properties": {
        "service": { "type": "string", "minLength": 1, "maxLength": 256 },
        "method": { "type": "string", "minLength": 1, "maxLength": 256 },
        "path": { "type": "string", "minLength": 1, "maxLength": 512 },
        "req_brand": { "type": "string", "minLength": 1, "maxLength": 256 },
        "resp_brand": { "type": "string", "minLength": 1, "maxLength": 256 }
      }
    }
  }
}
