{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://x07.io/spec/x07-arch.crawl.index.schema.json",
  "title": "x07.arch.crawl.index@0.1.0",
  "description": "Pinned crawler policies + RR policy ids (contracts-as-data).",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "policies"],
  "properties": {
    "schema_version": { "const": "x07.arch.crawl.index@0.1.0" },
    "policies": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/policy_ref" }
    },
    "defaults": { "$ref": "#/$defs/defaults", "default": {} }
  },
  "$defs": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9._-]*$"
    },
    "rel_path": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "pattern": "^(?![\\\\/])(?![A-Za-z]:)(?!.*(?:^|[\\\\/])\\.\\.(?:[\\\\/]|$)).+"
    },
    "policy_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "policy_path", "budget_profile_id"],
      "properties": {
        "id": { "$ref": "#/$defs/id" },
        "policy_path": { "$ref": "#/$defs/rel_path" },
        "budget_profile_id": { "$ref": "#/$defs/id" },
        "rr_policy_id": { "$ref": "#/$defs/id", "default": "" }
      }
    },
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "default_policy_id": { "$ref": "#/$defs/id" }
      }
    }
  }
}
