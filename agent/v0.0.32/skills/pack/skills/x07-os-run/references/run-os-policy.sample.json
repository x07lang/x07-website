{
  "schema_version": "x07.run-os-policy@0.1.0",
  "policy_id": "sample-minimal",
  "limits": {
    "cpu_ms": 1000,
    "wall_ms": 2000,
    "mem_bytes": 134217728,
    "fds": 64,
    "procs": 0,
    "core_dumps": false
  },
  "fs": {
    "enabled": false,
    "read_roots": [],
    "write_roots": [],
    "deny_hidden": true
  },
  "net": {
    "enabled": false,
    "allow_dns": false,
    "allow_tcp": false,
    "allow_udp": false,
    "allow_hosts": []
  },
  "db": {
    "enabled": false,
    "drivers": {
      "sqlite": false,
      "postgres": false,
      "mysql": false,
      "redis": false
    }
  },
  "env": {
    "enabled": false,
    "allow_keys": [],
    "deny_keys": []
  },
  "time": {
    "enabled": false,
    "allow_monotonic": false,
    "allow_wall_clock": false,
    "allow_sleep": false,
    "max_sleep_ms": 0,
    "allow_local_tzid": false
  },
  "language": {
    "allow_unsafe": false,
    "allow_ffi": false
  },
  "process": {
    "enabled": false,
    "allow_spawn": false,
    "max_live": 0,
    "max_spawns": 0,
    "allow_execs": [],
    "allow_exec_prefixes": [],
    "allow_args_regex_lite": [],
    "allow_env_keys": [],
    "allow_exec": false,
    "allow_exit": false,
    "max_runtime_ms": 0,
    "max_stdout_bytes": 0,
    "max_stderr_bytes": 0,
    "max_total_bytes": 0,
    "max_stdin_bytes": 0,
    "kill_on_drop": true,
    "kill_tree": true,
    "allow_cwd": false,
    "allow_cwd_roots": []
  }
}
