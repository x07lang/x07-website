{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://x07.io/spec/x07-package.schema.json",
  "title": "x07.package@0.1.0",
  "description": "Package manifest for official and third-party X07 packages. Tools may add extra metadata fields, but the agent portal relies on description/docs being present on the latest version.",
  "type": "object",
  "additionalProperties": true,
  "required": ["schema_version", "name", "version", "module_root", "modules"],
  "properties": {
    "schema_version": { "const": "x07.package@0.1.0" },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[a-z][a-z0-9_-]{0,127}$",
      "description": "Registry package name."
    },
    "version": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64,
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$",
      "description": "Package semver version."
    },
    "description": {
      "type": "string",
      "description": "Short human summary (required for newest official package versions; older versions may omit)."
    },
    "docs": {
      "type": "string",
      "description": "Long-form usage notes (required for newest official package versions; older versions may omit)."
    },
    "module_root": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "pattern": "^(?![\\\\/])(?![A-Za-z]:)(?!.*(?:^|[\\\\/])\\.\\.(?:[\\\\/]|$)).+$",
      "description": "Relative directory containing module files (for example: modules)."
    },
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/module_id" },
      "description": "List of exported module IDs provided by this package."
    },
    "meta": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "determinism_tier": { "type": "string" },
        "worlds_allowed": { "type": "array", "items": { "type": "string" } },
        "requires_packages": { "type": "array", "items": { "type": "string" } },
        "import_mode": { "type": "string" }
      }
    }
  },
  "$defs": {
    "module_id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256,
      "pattern": "^[a-z][a-z0-9_]*(\\.[a-z0-9_]+)*$"
    }
  }
}
