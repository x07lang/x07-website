{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://x07.io/spec/x07-arch.msg.amqp.profile.schema.json",
  "title": "x07.arch.msg.amqp.profile@0.1.0",
  "description": "Pinned AMQP connection profile (contracts-as-data).",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "id", "v", "host", "port", "vhost", "limits"],
  "properties": {
    "schema_version": { "const": "x07.arch.msg.amqp.profile@0.1.0" },
    "id": { "type": "string", "minLength": 1, "maxLength": 128 },
    "v": { "type": "integer", "minimum": 1 },
    "host": { "type": "string", "minLength": 1, "maxLength": 256 },
    "port": { "type": "integer", "minimum": 1, "maximum": 65535, "default": 5672 },
    "vhost": { "type": "string", "minLength": 1, "maxLength": 256 },
    "auth": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "username_secret_id": { "type": "string", "default": "" },
        "password_secret_id": { "type": "string", "default": "" }
      },
      "default": {}
    },
    "limits": {
      "type": "object",
      "additionalProperties": false,
      "required": ["max_body_bytes", "prefetch_count", "max_poll_items"],
      "properties": {
        "max_body_bytes": { "type": "integer", "minimum": 1, "maximum": 1073741824 },
        "prefetch_count": { "type": "integer", "minimum": 1, "maximum": 1000000 },
        "max_poll_items": { "type": "integer", "minimum": 1, "maximum": 100000 }
      }
    }
  }
}
