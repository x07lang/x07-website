{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://x07.io/spec/x07.pbt.params@0.1.0.schema.json",
  "title": "X07 PBT Params v0.1.0",
  "description": "Typed parameter list used in x07.pbt.repro artifacts.",
  "type": "array",
  "items": { "$ref": "#/$defs/param" },
  "default": [],
  "$defs": {
    "i32": {
      "type": "integer",
      "minimum": -2147483648,
      "maximum": 2147483647
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64,
      "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
    },
    "bytes_b64": {
      "type": "string",
      "minLength": 0,
      "maxLength": 16777216
    },
    "param": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "ty"],
      "properties": {
        "name": { "$ref": "#/$defs/name" },
        "ty": { "type": "string", "enum": ["i32", "bytes"] },
        "value": { "$ref": "#/$defs/i32" },
        "b64": { "$ref": "#/$defs/bytes_b64" },
        "len": { "type": "integer", "minimum": 0 }
      },
      "allOf": [
        {
          "if": { "properties": { "ty": { "const": "i32" } } },
          "then": { "required": ["value"] }
        },
        {
          "if": { "properties": { "ty": { "const": "bytes" } } },
          "then": { "required": ["b64", "len"] }
        }
      ]
    }
  }
}

