{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://x07.io/spec/x07-bundle.report.schema.json",
  "title": "X07 x07 bundle report v0.2.0",
  "description": "Wrapper report emitted by `x07 bundle`. Includes target resolution + bundling metadata + the underlying runner report used to produce the native artifact.",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "runner", "world", "target", "bundle", "report"],
  "properties": {
    "schema_version": { "const": "x07.bundle.report@0.2.0" },

    "runner": { "enum": ["host", "os"] },

    "world": {
      "enum": [
        "solve-pure",
        "solve-fs",
        "solve-rr",
        "solve-kv",
        "solve-full",
        "run-os",
        "run-os-sandboxed"
      ]
    },

    "target": {
      "type": "object",
      "additionalProperties": false,
      "required": ["kind", "path", "project_root", "lockfile", "resolved_module_roots"],
      "properties": {
        "kind": { "enum": ["project", "program", "artifact"] },
        "path": { "type": "string" },
        "project_root": { "type": ["string", "null"] },
        "lockfile": { "type": ["string", "null"] },
        "resolved_module_roots": { "type": "array", "items": { "type": "string" } }
      }
    },

    "bundle": {
      "type": "object",
      "additionalProperties": false,
      "required": ["out", "name", "abi", "policy", "kind"],
      "properties": {
        "out": {
          "type": "string",
          "description": "Path to the produced native executable."
        },
        "name": {
          "type": "string",
          "description": "Synthetic argv[0] injected by the wrapper (stable; usually derived from the output basename)."
        },
        "abi": {
          "type": "object",
          "additionalProperties": false,
          "required": ["kind"],
          "properties": {
            "kind": {
              "enum": ["argv_v1"],
              "description": "The wrapper encodes process args to argv_v1 input bytes."
            }
          }
        },
        "policy": {
          "description": "Policy materialization info for run-os-sandboxed bundles; null for other worlds.",
          "oneOf": [
            { "type": "null" },
            {
              "type": "object",
              "additionalProperties": false,
              "required": ["base_policy", "effective_policy", "embedded_env_keys"],
              "properties": {
                "base_policy": { "type": "string" },
                "effective_policy": { "type": "string" },
                "embedded_env_keys": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          ]
        },
        "emit_dir": {
          "type": ["string", "null"],
          "description": "Optional directory where intermediate C sources/headers were emitted (debug/inspection)."
        },
        "kind": {
          "type": "string",
          "enum": ["native", "vm"],
          "description": "Bundle kind. 'native' runs directly on host; 'vm' is a host launcher that runs a guest payload behind a VM boundary."
        },
        "guest": {
          "description": "Guest execution metadata for vm bundles; null for native bundles.",
          "oneOf": [
            { "type": "null" },
            {
              "type": "object",
              "additionalProperties": false,
              "required": ["contract", "platform", "image", "entrypoint", "mounts"],
              "properties": {
                "contract": { "const": "x07.vm.exec@0.1.0" },
                "platform": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["os", "arch"],
                  "properties": {
                    "os": { "const": "linux" },
                    "arch": { "enum": ["amd64", "arm64"] }
                  }
                },
                "image": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" },
                    "ref": { "type": "string" },
                    "layout": { "type": "string" }
                  },
                  "anyOf": [
                    { "required": ["digest"] },
                    { "required": ["ref"] },
                    { "required": ["layout"] }
                  ]
                },
                "entrypoint": {
                  "type": "array",
                  "minItems": 1,
                  "items": { "type": "string" }
                },
                "workdir": { "type": "string", "default": "/" },
                "mounts": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["job_in", "job_out"],
                  "properties": {
                    "job_in": { "type": "string" },
                    "job_out": { "type": "string" }
                  }
                }
              }
            }
          ]
        }
      }
    },

    "report": { "type": "object" }
  },

  "allOf": [
    {
      "if": { "properties": { "runner": { "const": "host" } } },
      "then": {
        "properties": {
          "report": { "$ref": "https://x07.io/spec/x07-host-runner.report.schema.json" }
        }
      }
    },
    {
      "if": { "properties": { "runner": { "const": "os" } } },
      "then": {
        "properties": {
          "report": { "$ref": "https://x07.io/spec/x07-os-runner.report.schema.json" }
        }
      }
    },

    {
      "if": { "properties": { "world": { "const": "run-os-sandboxed" } } },
      "then": {
        "properties": {
          "bundle": {
            "properties": {
              "policy": { "type": "object" }
            }
          }
        }
      },
      "else": {
        "properties": {
          "bundle": {
            "properties": {
              "policy": { "type": "null" }
            }
          }
        }
      }
    },

    {
      "if": { "properties": { "bundle": { "properties": { "kind": { "const": "vm" } } } } },
      "then": {
        "properties": {
          "bundle": {
            "properties": {
              "guest": { "type": "object" }
            }
          }
        }
      },
      "else": {
        "properties": {
          "bundle": {
            "properties": {
              "guest": { "type": "null" }
            }
          }
        }
      }
    }
  ]
}
