{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://x07.io/spec/x07-arch.msg.amqp.index.schema.json",
  "title": "x07.arch.msg.amqp.index@0.1.0",
  "description": "Pinned AMQP (0-9-1) driver profiles + topologies (contracts-as-data).",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "profiles", "topologies"],
  "properties": {
    "schema_version": { "const": "x07.arch.msg.amqp.index@0.1.0" },
    "profiles": { "type": "array", "minItems": 1, "items": { "$ref": "#/$defs/ref" } },
    "topologies": { "type": "array", "minItems": 1, "items": { "$ref": "#/$defs/ref" } }
  },
  "$defs": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9._-]*$"
    },
    "rel_path": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "pattern": "^(?![\\\\/])(?![A-Za-z]:)(?!.*(?:^|[\\\\/])\\.\\.(?:[\\\\/]|$)).+"
    },
    "ref": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "path", "budget_profile_id", "rr_policy_id"],
      "properties": {
        "id": { "$ref": "#/$defs/id" },
        "path": { "$ref": "#/$defs/rel_path" },
        "budget_profile_id": { "$ref": "#/$defs/id" },
        "rr_policy_id": { "$ref": "#/$defs/id" }
      }
    }
  }
}
