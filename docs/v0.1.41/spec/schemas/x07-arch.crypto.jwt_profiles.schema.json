{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://x07.io/spec/x07-arch.crypto.jwt_profiles.schema.json",
  "title": "x07.arch.crypto.jwt_profiles@0.1.0",
  "description": "Pinned JWT issuance/verification profiles (claims + TTL + alg + key id).",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "id", "v", "profiles"],
  "properties": {
    "schema_version": { "const": "x07.arch.crypto.jwt_profiles@0.1.0" },
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9._-]*$"
    },
    "v": { "type": "integer", "minimum": 1 },
    "profiles": { "type": "array", "minItems": 1, "items": { "$ref": "#/$defs/profile" } }
  },
  "$defs": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9._-]*$"
    },
    "u32": { "type": "integer", "minimum": 0 },
    "claim": { "type": "string", "minLength": 1, "maxLength": 64 },
    "profile": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "issuer",
        "audience",
        "alg",
        "key_id",
        "max_ttl_secs",
        "clock_skew_secs",
        "required_claims"
      ],
      "properties": {
        "id": { "$ref": "#/$defs/id" },
        "issuer": { "type": "string", "minLength": 1, "maxLength": 256 },
        "audience": { "type": "string", "minLength": 1, "maxLength": 256 },
        "alg": { "type": "string", "enum": ["EdDSA"] },
        "key_id": { "$ref": "#/$defs/id" },
        "max_ttl_secs": { "$ref": "#/$defs/u32" },
        "clock_skew_secs": { "$ref": "#/$defs/u32" },
        "required_claims": { "type": "array", "items": { "$ref": "#/$defs/claim" }, "default": [] },
        "jcs_payload": { "type": "boolean", "default": true }
      }
    }
  }
}
