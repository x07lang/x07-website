      "require_scopes": false
    },
    "archive": {
      "index_path": "arch/archive/index.x07archive.json",
      "enforce": "error"
    },
    "db": {
      "index_path": "arch/db/index.x07db.json",
      "enforce": "error"
    },
    "crypto": {
      "index_path": "arch/crypto/index.x07crypto.json",
      "enforce": "error"
