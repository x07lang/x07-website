{
  "schema_version": "x07.arch.manifest@0.1.0",
  "repo": { "id": "contracts_project_example", "root": "." },
  "externals": {
    "allowed_import_prefixes": ["std.", "ext."],
    "allowed_exact": []
  },
  "nodes": [],
  "rules": [],
  "checks": {
    "deny_cycles": false,
    "deny_orphans": false,
    "enforce_visibility": false,
    "enforce_world_caps": false
