{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://x07.io/spec/x07-arch.crawl.policy.schema.json",
  "title": "x07.arch.crawl.policy@0.1.0",
  "description": "Pinned crawl policy (robots + limits).",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "id", "v", "user_agent", "limits", "robots"],
  "properties": {
    "schema_version": { "const": "x07.arch.crawl.policy@0.1.0" },
    "id": { "type": "string", "minLength": 1, "maxLength": 128 },
    "v": { "type": "integer", "minimum": 1 },
    "user_agent": { "type": "string", "minLength": 1, "maxLength": 128 },
    "robots": { "$ref": "#/$defs/robots" },
    "limits": { "$ref": "#/$defs/limits" }
  },
  "$defs": {
    "robots": {
      "type": "object",
      "additionalProperties": false,
      "required": ["respect", "cache_ttl_secs"],
      "properties": {
        "respect": { "type": "boolean" },
        "cache_ttl_secs": { "type": "integer", "minimum": 0, "maximum": 31536000 }
      }
    },
    "limits": {
      "type": "object",
      "additionalProperties": false,
      "required": ["max_urls_total", "max_depth", "max_url_bytes", "max_body_bytes"],
      "properties": {
        "max_urls_total": { "type": "integer", "minimum": 1, "maximum": 100000000 },
        "max_depth": { "type": "integer", "minimum": 0, "maximum": 1000000 },
        "max_url_bytes": { "type": "integer", "minimum": 1, "maximum": 65536 },
        "max_body_bytes": { "type": "integer", "minimum": 0, "maximum": 1073741824 },
        "per_host_inflight": { "type": "integer", "minimum": 1, "maximum": 1024, "default": 8 }
      }
    }
  }
}
