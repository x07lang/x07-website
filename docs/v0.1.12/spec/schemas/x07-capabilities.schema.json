{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://x07.io/spec/x07-capabilities.schema.json",
  "title": "x07.capabilities@0.1.0",
  "description": "Canonical mapping from agent-intent capabilities to packages (and optional alternatives).",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "capabilities"],
  "properties": {
    "schema_version": { "const": "x07.capabilities@0.1.0" },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/capability" }
    },
    "aliases": {
      "type": "object",
      "description": "Optional alias map (string -> capability_id).",
      "additionalProperties": { "type": "string" }
    }
  },
  "$defs": {
    "semver": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64,
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$",
      "description": "Semantic-ish version string."
    },
    "package_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128,
          "pattern": "^[a-z][a-z0-9_-]{0,127}$"
        },
        "version": { "$ref": "#/$defs/semver" }
      }
    },
    "capability": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "summary", "canonical"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "summary": { "type": "string", "minLength": 1 },
        "canonical": { "$ref": "#/$defs/package_ref" },
        "alternatives": {
          "type": "array",
          "items": { "$ref": "#/$defs/package_ref" }
        },
        "worlds": { "type": "array", "items": { "type": "string" } },
        "status": {
          "type": "string",
          "enum": ["stable", "experimental", "deprecated"]
        },
        "notes": { "type": "string" }
      }
    }
  }
}
