{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://x07.io/spec/x07-arch.cli.index.schema.json",
  "title": "x07.arch.cli.index@0.1.0",
  "description": "Pinned CLI UX profiles (contracts-as-data).",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "profiles"],
  "properties": {
    "schema_version": { "const": "x07.arch.cli.index@0.1.0" },
    "profiles": { "type": "array", "minItems": 1, "items": { "$ref": "#/$defs/ref" } },
    "defaults": { "$ref": "#/$defs/defaults", "default": {} }
  },
  "$defs": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9][A-Za-z0-9._-]*$"
    },
    "rel_path": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1024,
      "pattern": "^(?![\\\\/])(?![A-Za-z]:)(?!.*(?:^|[\\\\/])\\.\\.(?:[\\\\/]|$)).+"
    },
    "ref": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "path"],
      "properties": {
        "id": { "$ref": "#/$defs/id" },
        "path": { "$ref": "#/$defs/rel_path" }
      }
    },
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "properties": { "default_profile_id": { "$ref": "#/$defs/id" } }
    }
  }
}
